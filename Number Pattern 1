import java.util.Scanner;
public class NumberPattern1 {
    public static void main(String[] args) {
        int rows = 4;
        printPattern(rows);
    }

    private static void printPattern(int rows) {
        int count = 1;
        for (int i = 1; i <= rows; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print((int) Math.pow(count++, 2) + " ");
            }
            System.out.println();
        }
    }
}
